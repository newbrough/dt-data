<cluster>
 <workspace>
   <name>work_consumer</name>
   <image>${epuworker_image_id}</image>
   <quantity>1</quantity>
   <nic wantlogin="true">public</nic>
   <ctx>
     <provides>
       <identity/>
     </provides>
     <requires>
       <identity/>
       <data name="dt-chef-solo"><![CDATA[
{
"ioncontainers": { 
        "scheduler_container": [ 
          {
              "name":"ccagent",              
              "version":"0.1"
          },
          {
              "name":"scheduler", 
              "version":"0.1",
                "config": {
                "ion.services.dm.scheduler.scheduler_service":{
                  "index_store_class": "ion.core.data.cassandra_bootstrap.CassandraIndexedStoreBootstrap",
                  "column_family":  "scheduler",
                  "cassandra_username": "${cassandra_username}",
                  "cassandra_password": "${cassandra_password}"
                }
              },
              "processapp":["scheduler","ion.services.dm.scheduler.scheduler_service", "SchedulerService"]
          }
          ],
          "identity_registry_container1": [
            {
                "name":"ccagent",
                "version":"0.1"
            },
            {
                "name":"identity_registry",    
                "version":"0.1",
                "processapp":["identity_registry","ion.services.coi.identity_registry","IdentityRegistryService"]
            }
          ],
          "identity_registry_container2": [
            {
                "name":"ccagent",
                "version":"0.1"
            },
            {
                "name":"identity_registry",    
                "version":"0.1",
                "processapp":["identity_registry","ion.services.coi.identity_registry","IdentityRegistryService"]
            }
          ]
        },
  "local_app_confs": { 
         "ion.core.data.storage_configuration_utility":{
         "storage provider":{"host":"${cassandra_hostname}","port":9160},
         "persistent archive":{}
         }
  },
  "universal_app_confs":{
    "broker_host_list":"${broker_ip_address}",
    "sysname":"${exchange_scope}"
  },
  "virtualenv": {
    "path" : "/home/cc/app-venv",
    "virtualenv" : "/opt/python2.5/bin/virtualenv",
    "python" : "python2.5"
  },
  "pythoncc":{
    "broker":"${broker_ip_address}",
    "sysname":"${exchange_scope}",
    "broker_heartbeat":"30",
    "log_level":"${ion_log_level}"
  },
  "appretrieve":{
    "retrieve_method":"${retrieve_method}",
    "archive_url":"${archive_url}",
    "git_repo":"${git_repo}",
    "git_branch":"${git_branch}",
    "git_commit":"${git_commit}"
  },
  "appinstall":{
    "install_method":"py_venv_buildout",
    "package_repo":"${package_repo}",
    "super_cache":"http://ooici.net/releases/supercache.tar.gz"
  },
  "apprun":{
    "run_method":"supervised",
    "autorestart":true
  },
  "appmonitor":{
    "retrieve_method":"git",
    "git_repo":"https://github.com/ooici/epuagent.git",
    "git_branch":"master",
    "git_commit":"HEAD",
    "install_method":"py_venv_buildout",
    "super_cache":"http://ooici.net/releases/supercache.tar.gz",
    "service_config":"res/apps/epuagent.app",
    "package_repo":"http://ooici.net/releases",
    "node_id":"${node_id}",
    "heartbeat_dest":"${heartbeat_dest}",
    "heartbeat_op":"heartbeat",
    "heartbeat_period":20
  },
  "dtdata":{
    "retrieve_method":"archive",
    "archive_url":"${dtdata_archive_url}",
    "chef_debug_level":"debug"
  },
  "username":"cc",
  "groupname":"users",
  "recipes":["user", "r1app"]
}
]]></data>
     </requires>
   </ctx>
 </workspace>
</cluster>
