{
    "image": "${epuworker_image_id}",
    "chef_config" : {
      "epuservices":{
        "epu-worker": [
          {
            "name": "epu-worker-1",
            "args": { },
            "version": "0.1",
            "config": {
              "server": {
                "amqp": {
                  "host": "${broker_ip_address}",
                  "username": "${broker_username}",
                  "password": "${broker_password}"
                }
              }
            }
          }
        ]
      },
      "apprun":{
        "run_method":"supervised",
        "autorestart":true
      },
      "appmonitor":{
        "retrieve_method":null,
        "git_repo":"${epuagent_git_repo}",
        "git_branch":"${epuagent_git_branch}",
        "git_commit":"${epuagent_git_commit}",
        "install_method":null,
        "package_repo":"${package_repo}",
        "config": {
          "server": {
            "amqp": {
              "host": "${broker_ip_address}",
              "username": "${broker_username}",
              "password": "${broker_password}"
            }
          },
          "epuagent": {
            "heartbeat_dest": "${heartbeat_dest}",
            "heartbeat_op": "ou_heartbeat",
            "period_seconds": "${heartbeat_period_seconds}",
            "node_id": "${node_id}"
          }
        }
      },
      "virtualenv": {
              "path" : "/home/cc/app-venv"
      },
      "username":"cc",
      "groupname":"users",
      "appname": "epu-worker",
      "recipes":["user", "r2app"]
    },
    "vars" : {
        "local_app_confs": { }
    },
    "sites" : {
        "ec2-west": {
            "image": "${epuworker_image_id}",
            "allocation": "t1.micro",
            "sshkeyname": "ooi"
        },
        "ec2-east": {
            "image": "${epuworker_image_id}",
            "allocation": "t1.micro",
            "sshkeyname": "ooi"
        },
        "nimbus-ucsd": {
            "image": "${epuworker_image_id}",
            "allocation": "m1.large",
            "sshkeyname": "ooi"
        }
    }
}
