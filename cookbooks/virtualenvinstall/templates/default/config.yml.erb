phantom:

server:
  amqp:
    host: <%= @server %>
    port: <%= @port %>
    username: <%= @username %>
    password: <%= @password %>
    vhost: <%= @vhost %>
    heartbeat: <%= @heartbeat %>

    system:
        type: epu
        broker: <%= @rabbit_server %>
        broker_port: <%= @rabbit_port %>
        broker_ssl: False
        rabbit_user: <%= @rabbit_username %>
        rabbit_pw: <%= @rabbit_password %>
        rabbit_exchange: <%= @rabbit_exchange %>
    authz:
        type: simple_file
        filename: /home/bresnaha/local_pw_file

logging:
  version: 1
  formatters:
    brief:
      format: '%(levelname)-8s %(message)s'
    default:
      format: '%(asctime)s %(levelname)-8s %(name)-15s %(message)s'
      datefmt: '%Y-%m-%d %H:%M:%S'
    detailed:
      format: '%(asctime)s.%(msecs)03d [%(module)-15s:%(lineno)3d] %(levelname)-5s:%(message)s'
      datefmt: '%Y-%m-%d %H:%M:%S'
    detailednostamp:
      format: '[%(module)-15s:%(lineno)3d] %(levelname)-5s:%(message)s'
  handlers:
    console:
      class: logging.StreamHandler
      formatter: brief
      level: DEBUG
      stream: ext://sys.stdout
    file:
      class: logging.handlers.RotatingFileHandler
      formatter: detailed
      level: DEBUG
      filename: <%= @phantom_logfile %>
      maxBytes: 1048576
      backupCount: 3
    syslog:
      class: logging.handlers.SysLogHandler
      address: [<%= @syslog_server %>, <%= @syslog_port%>]
      formatter: detailednostamp
      level: DEBUG
      facility: local0
  loggers:
    phantom:
      level: INFO
  root:
    handlers: [file]
    level: DEBUG

